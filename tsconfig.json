{
  "compilerOptions": {
    "lib": [
      "es5", "es6", "dom", "dom.iterable", "ES2021"
    ],
    "target": "ES2022",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmitOnError": true,
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "pretty": true,
    "preferTsExts": true,
    "skipIgnore": true
  },
  "include": [
    "./",
    "./.old-src/**/*.json"
  ]
}